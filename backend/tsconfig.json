{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "noEmitOnError": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/**",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}